{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "Endpoint": "http://grafana:4317",
          "Protocol": "Grpc",
          "ResourceAttributes": {
            "service.name": "api-gateway",
            "deployment.environment": "development"
          }
        }
      }
    ],
    "Enrich": [ "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "TelemetryOptions": {
    "TempoEndpoint": "http://localhost:9020",
    "MetricsEndpoint": "http://localhost:9010"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "account-route": {
        "ClusterId": "AccountsCluser",
        "Match": {
          "Path": "/api/v{version}/account/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v{version}/{**catch-all}"
          }
        ],
        "RateLimiterPolicy": "DefaultRateLimiterPolicy"
      },
      "admin-route": {
        "ClusterId": "AdminCluser",
        "Match": {
          "Path": "/api/v{version}/admin/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/v{version}/{**catch-all}"
          }
        ],
        "RateLimiterPolicy": "DefaultRateLimiterPolicy"
      }
    }
  }
}
