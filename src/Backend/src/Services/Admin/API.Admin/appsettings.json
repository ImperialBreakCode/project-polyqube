{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "Endpoint": "http://grafana:4317",
          "Protocol": "Grpc",
          "ResourceAttributes": {
            "service.name": "api-admin",
            "deployment.environment": "development"
          }
        }
      }
    ],
    "Enrich": [ "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "AllowedHosts": "*",
  "AuthValidationOptions": {
    "Authority": "https://localhost:7210",
    "AccessTokenValidationEndpoint": "/api/v1/auth/validate-access-token"
  },
  "CorsOptions": {
    "AllowedOrigins": [
      "https://localhost:7254"
    ]
  },
  "TelemetryOptions": {
    "TempoEndpoint": "http://localhost:9010",
    "MetricsEndpoint": "http://localhost:9010"
  }
}
